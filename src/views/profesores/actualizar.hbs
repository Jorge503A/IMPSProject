<div class="container p-4">
    <div class="row justify-content-center">
        <h1>Actualizar profesor</h1>
    </div>
    <div class="row justify-content-center mt-4">
       <div class="col-md-4">
        <form action="/profesores/actualizar" method="POST">
        <div class="form-group">
                <input type="text" class="form-control" name="idprofesor" placeholder="Codigo del profesor" value="{{idprofesor}}" autofocus readonly />
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="nombre" placeholder="Nombre del profesor" value="{{nombre}}" autofocus />
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="apellido" placeholder="Apellido del profesor" value="{{apellido}}" />
            </div>
            <div class="form-group">
                <input type="email" class="form-control" name="email" placeholder="Correo del profesor" value="{{email}}" />
            </div>
            <div class="form-group">
                <input type="telefono" class="form-control" name="telefono" placeholder="telefono del profesor" value="{{telefono}}" />
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="usuario" placeholder="Usuario del profesor" value="{{usuario}}" />
            </div>
            <div class="form-group">
                <button class="btn btn-success btn-block">Guardar</button>
            </div>
        </form>
       </div>
    </div>
</div>