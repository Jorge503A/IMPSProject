<class="container p-4">
    <div class="row justify-content-center">
        <h1>Actualizar Carrera</h1>
    </div>
    <div class="row justify-content-center mt-4">
       <div class="col-md-4">
        <form action="/carreras/actualizar" method="POST">
        <div class="form-group">
                <input type="text" class="form-control" name="idcarrera" placeholder="idcarrera" value="{{idcarrera}}" autofocus  readonly/>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="carrera" placeholder="Nombre de la carrera" value="{{carrera}}" autofocus />
            </div>
            <div class="form-group">
                <button class="btn btn-success btn-block">Guardar</button>
            </div>
        </form>
       </div>
    </div>
</div>